{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "ES2017",
    "allowJs": true,
    "checkJs": true,
    "strict": true,

    "jsx": "preserve",
    "jsxFactory": "preact.h",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "diagnostics": true
  },
  "include": ["src/**/*.js", "types/**/*.ts", "src/**/*.jsx", "scripts/*.js"]
}
